<resources>
    <!-- Base application theme. -->
    <style name="Theme.Reuseit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#efefef</item>
        <item name="colorPrimaryVariant">#66BB6A</item>
        <item name="colorOnPrimary">#1a1a1a</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#66BB6A</item>
        <item name="colorSecondaryVariant">#388E3C</item>
        <item name="colorOnSecondary">#1a1a1a</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily" >@font/poppins</item>
    </style>

    <style name="DisableBackground" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>